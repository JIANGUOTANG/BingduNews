<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black_hinttext"

    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="文章详情"
            android:layout_marginRight="56dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:transitionName="about" />
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/dateil_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:transitionName="dateilImage"
        android:background="@mipmap/news13"
        />
     <TextView
         android:id="@+id/dateil_tvTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:textColor="@android:color/black"
         android:maxLines="1"
         android:text="广东第二师范学院"
         android:textSize="24sp"
         />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:text="清华同圆创作"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/dateil_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_text"
        android:text="@string/ershi"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
         android:background="@mipmap/ershi1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:text="科研平台"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:text="@string/ershi2"
        android:textSize="22sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/ershi2"
        />
</LinearLayout>
</android.support.v4.widget.NestedScrollView>