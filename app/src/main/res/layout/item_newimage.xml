<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/news_parent"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/newcardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
         >
            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/new_img"
                android:layout_width="match_parent"
                 android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:transitionName="dateilImage"
                android:scaleType="fitXY" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/new_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:textSize="18sp" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/new_tvDetail"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="@color/black_lint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="体育最前瞻"/>
                <TextView
                    android:id="@+id/pinlun"
                     android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="110"/>

            </LinearLayout>
        </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:id="@+id/imageView2" />
    </android.support.v7.widget.CardView>
</LinearLayout>